<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_employee_form_inherit_employee_projects" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit.employee.projects</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='personal_information']" position="inside">
                    <group string="Projects Information">
                        <field name="total_projects" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 